#!/bin/bash

shopt -s extglob
set -e

stack=${1:-cedar-14}
branch=${2:-cedar-14}

dir=`mktemp -d`
cp -r . $dir
pushd $dir

git init
git add --all
git commit -m "initial"

heroku create --stack $stack \
              --buildpack https://github.com/virtualstaticvoid/heroku-buildpack-r.git#$branch

